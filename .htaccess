# ==========================================
# DJ ZEN EYER - WORDPRESS HEADLESS + REACT
# FIXED VERSION - API REST funcionando
# ==========================================

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
RewriteBase /
RewriteRule ^index\.php$ - [L]

# CRÍTICO: NÃO redirecionar wp-json (API REST)
RewriteCond %{REQUEST_URI} ^/wp-json/ [NC]
RewriteRule .* - [L]

# CRÍTICO: NÃO redirecionar wp-admin
RewriteCond %{REQUEST_URI} ^/wp-admin/ [NC]
RewriteRule .* - [L]

# CRÍTICO: NÃO redirecionar wp-login.php
RewriteCond %{REQUEST_URI} ^/wp-login\.php [NC]
RewriteRule .* - [L]

# Redirecionar todo o resto para index.php (WordPress + React)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress

# ==========================================
# SECURITY HEADERS
# ==========================================
<IfModule mod_headers.c>
    # Remove server info
    Header unset X-Powered-By

    # Security headers
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # HSTS
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
</IfModule>

# ==========================================
# CORS (apenas para wp-json)
# ==========================================
<IfModule mod_headers.c>
    <If "%{REQUEST_URI} =~ m#^/wp-json/#">
        SetEnvIf Origin "^https?://(www\.)?(djzeneyer\.com|localhost:5173|127\.0\.0\.1:5173|localhost:3000|127\.0\.0\.1:3000)$" ALLOWED_ORIGIN=$0
        Header always set Access-Control-Allow-Origin "%{ALLOWED_ORIGIN}e" env=ALLOWED_ORIGIN
        Header always set Access-Control-Allow-Credentials "true" env=ALLOWED_ORIGIN
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-WP-Nonce, X-Requested-With"
        Header always set Vary "Origin"
    </If>
</IfModule>

# Handle OPTIONS preflight
<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteCond %{REQUEST_URI} ^/wp-json/
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# ==========================================
# COMPRESSION
# ==========================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# ==========================================
# BROWSER CACHING
# ==========================================
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"

    # CSS & JavaScript
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"

    # HTML (short cache)
    ExpiresByType text/html "access plus 1 hour"
</IfModule>

# ==========================================
# SECURITY: Block sensitive files
# ==========================================
<FilesMatch "^(\.htaccess|\.env|\.git|wp-config\.php|readme\.html|license\.txt)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Disable directory browsing
Options -Indexes

# ==========================================
# LITESPEED CACHE (se disponível)
# ==========================================
<IfModule LiteSpeed>
    # Cache público
    CacheEnable public /

    # NÃO cachear admin e checkout
    CacheDisable /wp-admin
    CacheDisable /wp-login.php
    CacheDisable /checkout
    CacheDisable /cart
    CacheDisable /my-account
    CacheDisable /minha-conta

    # Vary por cookies
    CacheVary cookie=wordpress_logged_in
    CacheVary cookie=woocommerce_items_in_cart
</IfModule>

# ==========================================
# MIME TYPES
# ==========================================
<IfModule mod_mime.c>
    AddType image/svg+xml svg svgz
    AddType image/webp webp
    AddType application/manifest+json webmanifest
    AddType font/woff2 woff2
    AddType font/woff woff
</IfModule>
